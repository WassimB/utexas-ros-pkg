<?xml version="1.0"?>

<robot name="person">
  <link name="base_footprint" />

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0.0 0 0.5" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name="base_link">
    <inertial>
      <mass value="0.01" />
      <origin xyz="0 0 0" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0" 
        izz="1.0" />
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.25" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1.0" radius="0.25" />
      </geometry>
    </collision>
  </link>

  <gazebo reference="base_link">
    <mu1 value="10.0" />
    <mu2 value="10.0" />
    <kp  value="1000000.0" />
    <kd  value="1.0" />
  </gazebo>

  <gazebo>
    <canonicalBody>base_footprint</canonicalBody>
    <controller:objectcontroller_plugin name="controller" plugin="libobjectcontroller_plugin.so">
      <topicName>cmd_vel</topicName>
    </controller:objectcontroller_plugin>
  </gazebo>

</robot>
