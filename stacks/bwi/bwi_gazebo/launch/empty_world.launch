<launch>

  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>

  <!-- set use_sim_time flag -->
  <group if="$(arg use_sim_time)">
    <param name="/use_sim_time" value="true" />
  </group>

  <!-- start empty world -->
  <node name="ens32_world" pkg="gazebo" type="gazebo" args="$(find gazebo_worlds)/worlds/empty.world --pause" respawn="false" output="screen" launch-prefix="optirun"/>

  <!-- start gui -->
  <group if="$(arg gui)">
    <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen" launch-prefix="optirun" />
  </group>

</launch>
