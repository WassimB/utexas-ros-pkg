<launch>

  <include file="$(find bwi_gazebo)/launch/segbot_ens32_world.launch" />

  <!-- Run the map server -->
  <arg name="map_file" default="$(find segbot_navigation)/maps/ens-basement-2012-07-26-edited.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
  <include file="$(find segbot_navigation)/launch/amcl.launch" />

  <!--- Run Move Base -->
  <include file="$(find segbot_navigation)/launch/move_base.launch" />

</launch>
