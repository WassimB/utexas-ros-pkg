<launch>

  <group ns="camera">

    <!-- Launch the camera driver -->
    <include file="$(find bwi_camera)/launch/c310_node.launch">
      <arg name="frame_id" value="/camera" />
      <arg name="device" value="/dev/camera2" />
    </include>
    <include file="$(find map_camera_pose)/launch/map_camera_pose.launch">
      <arg name="launch_camera_frame" value="camera" />
      <arg name="launch_file_path" value="$(find bwi_run)/launch/camera-tf.launch"/>
    </include>
    <!-- Launch the tf broadcaster -->
    <!--<include file="$(find bwi_run)/launch/camera1-tf.launch" />-->

    <!-- launch the marker detection -->
    <!-- <include file="$(find april_tags_node)/launch/april_tags_node.launch" /> -->

  </group>

</launch>
